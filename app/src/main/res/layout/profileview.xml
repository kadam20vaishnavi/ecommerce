<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/mobilep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile"
                    android:textSize="19dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/updateProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update Profile"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:textSize="18dp"
                    android:textColor="@color/colorPrice"
                    />

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_baseline_account_circle_24"
            app:tint="@color/black"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            app:cardCornerRadius="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:elevation="100dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Name :"
                        android:textSize="22dp"
                        android:layout_margin="10dp"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:id="@+id/namep"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="name"
                        android:textSize="20dp"
                        android:inputType="text"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/black"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Address :"
                        android:textSize="22dp"
                        android:layout_margin="10dp"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:id="@+id/addressp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="address"
                        android:textSize="20dp"
                        android:inputType="text"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/black"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Email :"
                        android:textSize="22dp"
                        android:layout_margin="10dp"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:id="@+id/emailp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="email"
                        android:textSize="20dp"
                        android:inputType="text"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/black"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/colorGray" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="My Order :"
                        android:textColor="@color/black"
                        android:textSize="22dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/orders"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="My Orders  "
                            android:textColor="@color/colorCart"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="20dp"
                            android:drawableEnd="@drawable/ic_baseline_shopping_cart_24"
                            android:drawableTint="@color/black" />

                        <TextView
                            android:id="@+id/carts"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="My Carts "
                            android:textColor="@color/colorCart"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="20dp"
                            android:drawableEnd="@drawable/ic_baseline_shopping_cart_24"
                            android:drawableTint="@color/black" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/colorGray" />

                <TextView
                    android:id="@+id/aboutus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="About Us :"
                    android:drawableEnd="@drawable/ic_baseline_arrow_back_24"
                    android:textSize="20dp"
                    android:layout_margin="10dp"
                    android:textColor="@color/colorDarkGray"
                    />

                <TextView
                    android:id="@+id/rateus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Rate Us :"
                    android:drawableEnd="@drawable/ic_baseline_arrow_back_24"
                    android:textSize="20dp"
                    android:layout_margin="10dp"
                    android:textColor="@color/colorDarkGray"
                    />

                <TextView
                    android:id="@+id/contact"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Contact Us :"
                    android:drawableEnd="@drawable/ic_baseline_arrow_back_24"
                    android:textSize="20dp"
                    android:layout_margin="10dp"
                    android:textColor="@color/colorDarkGray"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/logout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="LOG OUT"
                        android:textColor="@color/white"
                        android:textColorHint="#FF9696"
                        android:textSize="20dp"
                        android:background="@drawable/button_background"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</ScrollView>